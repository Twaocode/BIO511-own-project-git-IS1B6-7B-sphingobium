#!/bin/bash
#SBATCH -A C3SE408-25-2 
#SBATCH -J prokka_baseline_IS1B6-7B
#SBATCH -p vera
#SBATCH -N 1 --cpus-per-task=8
#SBATCH -t 01:00:00
#SBATCH --output=/cephyr/users/waltergu/Vera/own/logs/prokka_baseline_GU10_%j.out # output log, adjust path to where you want to save logs
#SBATCH --error=/cephyr/users/waltergu/Vera/own/logs/prokka_baseline_GU10_%j.err # error log, adjust path to where you want to save logs

# Set paths - ADJUST THESE TO YOUR ACTUAL PATHS
CONTAINER_PATH="/cephyr/NOBACKUP/groups/n2bin_gu/BIO511/singularity_images/prokka.sif"
RESULTS_PATH="/cephyr/NOBACKUP/groups/n2bin_gu/students/Walter/own_proj_bio511/results"
ASSEMBLIES_DIR="/cephyr/NOBACKUP/groups/n2bin_gu/students/Walter/own_proj_bio511/results/assembly/flye_polished"
CURATED_PROTEINS="/cephyr/NOBACKUP/groups/n2bin_gu/students/Walter/own_proj_bio511/raw_data/curatedRef.faa"
OUTPUT_DIR="${RESULTS_PATH}/annotation/prokka_baseline"

# Bind paths for container
export SINGULARITY_BINDPATH="${ASSEMBLIES_DIR}:/assemblies,${RESULTS_PATH}:/results,${CURATED_PROTEINS}:/curatedRef.faa"

# Create output directories
# If needed: mkdir -p ${RESULTS_PATH}
mkdir -p ${OUTPUT_DIR}

# Input assembly
ASSEMBLY="/assemblies/assembly.fasta"

# Set a prefix variable for naming outputs
PREFIX="$(basename ${ASSEMBLY} .fasta)_baseline"

# Run Prokka (baseline)
singularity exec ${CONTAINER_PATH} prokka \
  --cpus 8 \
  --force \
  --outdir /results/annotation/prokka_baseline \
  --prefix ${PREFIX} \
  --locustag BIO511 \
  --genus Sphingobium \
  --species sp \
  --proteins /curatedRef.faa \
  ${ASSEMBLY}

echo "Baseline Prokka annotation completed"